<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="ProjApp.Settings"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:SettingsPageViewModel"
             
             Title="Settings"
             >
    
    
    <VerticalStackLayout
        Margin="20">
        
        
        <Label 
            Text="Impostazioni&#10;"
            FontSize="36"
            HorizontalOptions="Center" 
            
            />

        <Label 
            Text="Theme:&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;&#10;"
            FontSize="24"
            Margin="10"
             />

        <Button
            Text="Disconnetti"
            Command="{Binding NavigateToLoginPageCommand}"
            Margin="15"
            HeightRequest="50"
            WidthRequest="200"
            VerticalOptions="End"/>

    </VerticalStackLayout>
    
</ContentPage>