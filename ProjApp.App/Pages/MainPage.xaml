<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.MainPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:MainPageViewModel"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Title="MainPage"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".65*"></RowDefinition>
            <RowDefinition Height=".35*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <!--Questa è la mappa:-->
        <Grid Grid.Row="0">
            <ContentPage Content="{Binding ContentMapView}" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
        </Grid>
        
        
        <!--Questa è la tendina:--> 
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Rectangle
                Grid.Row="0"
                Fill="#5BAFEC"
                WidthRequest="400"
                HeightRequest="10"
                HorizontalOptions="Start"
            />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Text="Ruolo: "
                    TextColor="#5BAFEC"
                    FontSize="22"
                    VerticalTextAlignment="Start"
                    HorizontalOptions="Start"
                    HeightRequest="25"
                    Margin="10,10,0,0"
                ></Label>

                <Label
                    Grid.Column="1"
                    Text="Tempo: "
                    TextColor="#5BAFEC"
                    FontSize="22"
                    VerticalTextAlignment="Start"
                    HorizontalOptions="Start"
                    HeightRequest="25"
                    Margin="10,10,0,0"
                ></Label>
            </Grid>

            <Border  Grid.Row="2" Stroke="#5BAFEC" StrokeShape="RoundRectangle 18" Margin="15" StrokeThickness="3">
                <Label 
                    Text="Informazioni partita:"
                    FontSize="20"
                    Margin="10,15,0,0"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                />
            </Border>

            <Button
            Grid.Row="6"
            Text="Abbandona Partita"
            BackgroundColor="#a4243b"
            Margin="10"
            HeightRequest="40"
            WidthRequest="150"
            VerticalOptions="Start"
        />



        </Grid>

    </Grid>






</ContentPage>
