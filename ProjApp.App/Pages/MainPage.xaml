<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.MainPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:MainPageViewModel"
             Shell.TabBarIsVisible="False"
             
             Title="MainPage"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <!--Questa è la mappa senza bottoni over:-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <ContentView Grid.RowSpan="2" ZIndex="0" Content="{Binding Mapview}" />
            
        </Grid>

        <Border 
            Grid.Row="1"
            x:Name="BottomToolbar"
            ZIndex="1"
            HeightRequest="500"
            VerticalOptions="End"
            BackgroundColor="#FFFFFF"
            StrokeShape="RoundRectangle 20"
            Padding="15"
            Stroke="#5BAFEC"
            StrokeThickness="1.5"
            IsVisible="True">
            
            <Border.GestureRecognizers>
                <PanGestureRecognizer
                    PanUpdated="PanGestureRecognizer_PanUpdated"/>
            </Border.GestureRecognizers>
            
            <!--Questa è la tendina:-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Column="0"
                        Text="Ruolo: "
                        TextColor="#5BAFEC"
                        FontSize="22"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        HeightRequest="25"
                        Margin="10,10,0,0"
                    />

                    <Image
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,12,0,0"
                        Source="clock_icon_azz.png"
                        HeightRequest="25"
                        WidthRequest="25"
                    />

                    <Label
                        Grid.Column="2"
                        Text="Tempo: "
                        TextColor="#5BAFEC"
                        FontSize="22"
                        VerticalTextAlignment="Center"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        HeightRequest="25"
                        Margin="10,10,0,0"
                    />
                    
                    <Button  
                        Grid.Column="3"
                        BackgroundColor="#5BAFEC"
                        ImageSource="down_arrow_icon.png"
                        VerticalOptions="Center"
                        WidthRequest="35" 
                        HeightRequest="25"
                        Margin="0,0,15,0"
                        Clicked="DrawerDown"
                    />

                    <!--<Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Button  
                            Grid.Row="0"
                            BackgroundColor="#5BAFEC"
                            WidthRequest="36" 
                            HeightRequest="24"
                            Margin="0,0,10,4"
                            Clicked="DrawerUp"
                        />
                        
                        

                    </Grid>-->

                    
                </Grid>

                <Border  Grid.Row="1" Stroke="#5BAFEC" StrokeShape="RoundRectangle 18" Margin="15" StrokeThickness="3">
                    <Label 
                    Text="Informazioni partita:"
                    TextColor="#5BAFEC"
                    FontSize="20"
                    Margin="10,15,0,0"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                />
                </Border>

                <Button
                Grid.Row="2"
                Text="Abbandona Partita"
                BackgroundColor="#a4243b"
                Command="{Binding AbbandonaPartitaCommand}"
                TextColor="White"
                Margin="10"
                HeightRequest="40"
                WidthRequest="150"
                VerticalOptions="Start"
            />

            </Grid>

        </Border>


        

    </Grid>
    
</ContentPage>
