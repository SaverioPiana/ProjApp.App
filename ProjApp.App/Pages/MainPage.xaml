<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.MainPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:MainPageViewModel"
             Shell.TabBarIsVisible="False"
             
             Title="MainPage">
             

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <!--Questa è la mappa senza bottoni over:-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <ContentView Grid.RowSpan="2" ZIndex="0" Content="{Binding Mapview}" />
            
        </Grid>

        <Border
            Grid.Row="1"
            x:Name="BottomDrawer"
            ZIndex="1"
            HeightRequest="520"
            TranslationY="13"
            VerticalOptions="End"
            IsVisible="True"
            Style="{StaticResource bottomDrawer}">
            
            <Border.GestureRecognizers>
                <PanGestureRecognizer
                    PanUpdated="PanGestureRecognizer_PanUpdated"/>
            </Border.GestureRecognizers>
            
            <!--Questa è la tendina:-->
            <Grid RowSpacing="5" Margin="5" Padding="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--<Label
                        Grid.Column="0"
                        Text="Ruolo: "
                        TextColor="#5BAFEC"
                        FontSize="22"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        HeightRequest="25"
                        Margin="10,10,0,0"
                    />-->

                    <Image
                        Grid.Column="0"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Margin="22,12,0,0"
                        Source="clock_icon_azz.png"
                        HeightRequest="25"
                        WidthRequest="25"
                    />

                    <Label
                        Grid.Column="1"
                        Text="Tempo: "
                        TextColor="{StaticResource Primary}"
                        FontSize="22"
                        VerticalTextAlignment="Center"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        HeightRequest="35"
                        Margin="10,10,0,0"
                    />


                    <BoxView Grid.Column="2"
                        Color="{StaticResource Primary}"
                        WidthRequest="100" 
                        HeightRequest="25"
                        Margin="0,10,15,0"
                        VerticalOptions="Center"
                        CornerRadius="10"
                     />
                    
                    <Button  
                        x:Name="BottomDrawerArrow"
                        Grid.Column="2"
                        BackgroundColor="Transparent"
                        ImageSource="down_arrow_icon.png"
                        VerticalOptions="Center"
                        WidthRequest="100" 
                        HeightRequest="25"
                        Margin="0,10,15,0"
                        Clicked="DrawerDownOrUp"
                        Rotation="0"
                    />

                    
                    <!--<Button  
                        Grid.Column="2"
                        BackgroundColor="{StaticResource Primary}"
                        ImageSource="up_arrow_icon.png"
                        VerticalOptions="Center"
                        WidthRequest="35" 
                        HeightRequest="25"
                        Margin="0,0,15,0"
                        Clicked="DrawerUp"
                    />-->
                </Grid>
                    

                <Border  
                    Grid.Row="1"
                    Stroke="#5BAFEC" 
                    StrokeShape="RoundRectangle 18" 
                    Margin="15" 
                    StrokeThickness="3"
                    Style="{StaticResource bottomDrawer}">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                            Offset="0,0"
                            Radius="40"
                            Opacity="0.55" />
                    </Border.Shadow>
                    
                    <Label 
                        Text="Azioni:"
                        TextColor="{StaticResource Primary}"
                        FontSize="20"
                        Margin="10,15,0,0"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                    />
                </Border>

                <Button
                    Grid.Row="2"
                    Text="Abbandona Partita"
                    BackgroundColor="{StaticResource Manzz}"
                    Command="{Binding AbbandonaPartitaCommand}"
                    TextColor="White"
                    Margin="0,0,0,20"
                    HeightRequest="40"
                    WidthRequest="150"
                    FontSize="18"
                    FontAttributes="Bold"
                    VerticalOptions="Start"
                    />

            </Grid>

        </Border>


        

    </Grid>
    
</ContentPage>
