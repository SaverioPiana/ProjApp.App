<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.MainPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:MainPageViewModel"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Title="MainPage"
             >

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*" />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <ContentPage Content="{Binding ContentMapView}" Grid.RowSpan="2" Grid.ColumnSpan="3" ZIndex="0"/>
        
        <ContentPage BindingContext="{x:Reference Tendina}" Grid.Row="1" Grid.ColumnSpan="3" ZIndex="1"/>
        
        <Button 
                ZIndex="2"
                BackgroundColor="#5BAFEC"
                ImageSource="settings_icon.png"
                CornerRadius="20"
                HeightRequest="50"
                WidthRequest="50"
                VerticalOptions="Center"
                Margin="15"
                Grid.Row="1"
                Grid.Column="0"
            />

        <Button 
                ZIndex="2"
                BackgroundColor="#5BAFEC"
                ImageSource="settings_icon.png"
                CornerRadius="20"
                HeightRequest="50"
                WidthRequest="50"
                VerticalOptions="Center"
                Margin="15"
                Grid.Row="1"
                Grid.Column="1"
            />

        <Button 
                ZIndex="2"
                BackgroundColor="#5BAFEC"
                ImageSource="settings_icon.png"
                CornerRadius="20"
                HeightRequest="50"
                WidthRequest="50"
                VerticalOptions="Center"
                Margin="15"
                Grid.Row="1"
                Grid.Column="2"
            />
    </Grid>
    



</ContentPage>
