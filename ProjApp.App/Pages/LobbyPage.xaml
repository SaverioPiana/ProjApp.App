<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="ProjApp.LobbyPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:LobbyPageViewModel"
            
             Title="LobbyPage"
             >


    <VerticalStackLayout
        Margin="20">
        <Label 
            Text="LOBBY CORRENTE"
            FontSize="50"
            HorizontalOptions="Center" 
            />

        <Label 
            Text="Codice lobby: "
            FontSize="24"
            Margin="10"
             />

        <Button
            Text="Lascia la lobby"
            Command="{Binding BackCommand}"
            Margin="15"
            HeightRequest="50"
            WidthRequest="200"
            VerticalOptions="End"/>

    </VerticalStackLayout>

</ContentPage>