<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.ProfilePage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:ProfilePageViewModel"
             Title="ProfilePage">
    
    <VerticalStackLayout 
        Margin="20">

        <Label 
            Text="Profilo&#10;"
            FontSize="36"
            HorizontalOptions="Center"
            />

        <Label 
            Text="{Binding Nick, StringFormat = Nickname: {0}}"
            FontSize="24"
            />

        <Label 
            Text="{Binding MaxScore, StringFormat = MaxScore: {0}}"
            FontSize="24"
            />

        <Label 
            Text="{Binding TotalScore, StringFormat = TotalScore: {0}}"
            FontSize="24"
            />

        <Frame
            BorderColor="MediumSlateBlue">
            <Label Text="Giocatori Recenti:"
                   FontSize="24"
                   Style="{StaticResource LabelInsideFrame}"/>
        </Frame>
        
    </VerticalStackLayout>

</ContentPage>