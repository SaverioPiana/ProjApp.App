<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.ProfilePage"
             
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:ProfilePageViewModel"
             
             Title="ProfilePage">
    
    
    <StackLayout Orientation="Vertical" Spacing="15">

        <Rectangle
            Margin="0"
            Fill="#9051F6"
            WidthRequest="400"
            HeightRequest="25"
            HorizontalOptions="Start"
            
            />

        <Label 
                Text="Profilo"
                FontSize="36"
                HorizontalOptions="Center"
             />


        <Border  Padding="5" Stroke="#9051F6" StrokeShape="RoundRectangle 18" Margin="20"
               >
            <StackLayout Orientation="Horizontal" Spacing="15">
                
                
                <Label 
                    Text="  Nickname: "
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                       
                    />
                
                
                <Entry
                    x:Name="Nickname"
                    Placeholder="Inserisci nickname        "
                    TextColor="Black"
                    FontAttributes="Bold"
                    Margin="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
            
                    />
                
            </StackLayout>
            
        </Border>


        <Label 
            
            Text="Max Score:"
            FontSize="20"
            Margin="20"
             />

        <Label 
            Text="Total Score:&#10;"
            FontSize="20"
            Margin="20"
            />


        <Border  Padding="5" Stroke="#9051F6" StrokeShape="RoundRectangle 18" Margin="20"
               >
            <StackLayout Orientation="Vertical" Spacing="15">


                <Label Text="  Giocatori recenti:"
                       FontSize="20"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                
                



            </StackLayout>

        </Border>





    </StackLayout>
    
</ContentPage>