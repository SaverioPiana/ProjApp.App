<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.LoginPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:LoginPageViewModel"
             Shell.TabBarIsVisible="False"
             
             Title="LoginPage">
    
    <VerticalStackLayout>

        <Rectangle
            Margin="0"
            Fill="#5BAFEC"
            WidthRequest="400"
            HeightRequest="25"
            HorizontalOptions="Start"
            
            />


        <Label 
            Text="&#10;Benvenuto!"
            FontSize="45"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"
            Padding="20"/>

        <Image
            Source="profile_icon_azz.png"
            HorizontalOptions="Center"
            WidthRequest="80"
            HeightRequest="80"
            
            Margin="0"
            
            
            />

        <Label 
            Text="Sign in to continue"
            FontSize="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20 "
            />

        <Entry
            Text="{Binding Username}"
            x:Name="Username"
            Placeholder="Username                                             "
            TextColor="Black"
            FontAttributes="Bold"
            Margin="20"
            HorizontalOptions="Center"
            
             />

        <Entry 
            Text="{Binding Password}"
            IsPassword="True"
            x:Name="Password"
            Placeholder="Password                                             "
            TextColor="Black"
            FontAttributes="Bold"
            Margin="10"
            HorizontalOptions="Center"

             />

        <Button
            Text="SiGN IN"
            Command="{Binding NavigateToStartPageCommand}"
            BackgroundColor="#5BAFEC"
            Margin="15"
            HeightRequest="50"
            WidthRequest="200"
            VerticalOptions="End"/>
            
           


    </VerticalStackLayout>
    
    
</ContentPage>