<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjApp.SettingsPage"
             xmlns:viewmodel="clr-namespace:ProjApp.ViewModel"
             x:DataType="viewmodel:SettingsPageViewModel"
             
             Shell.TabBarIsVisible="False"
             Title="SettingsPage"
             >


    <Grid RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle
            Grid.Row="0"
            Fill="{StaticResource Primary}"
            WidthRequest="400"
            HeightRequest="25"
            HorizontalOptions="Start"
            
        />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"></ColumnDefinition>
                <ColumnDefinition Width=".75*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button
                x:Name="BackButton"
                Grid.Column="0"
                Command="{Binding NavigateToProfilePageCommand}"
                BackgroundColor="{StaticResource Primary}"
                ImageSource="back_arrow_icon.png"
                CornerRadius="12"
                HeightRequest="40"
                WidthRequest="40"
                VerticalOptions="Start"
            
            />

            <Label 
                Grid.Column="1"
                Text=" Impostazioni"
                FontSize="36"
                VerticalOptions="Start"
            
            />
        </Grid>

        <Grid Grid.Row="2" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label 
                Grid.Column="0"
                Text="Tema"
                FontSize="20"
                HorizontalOptions="Start"
                VerticalOptions="Center"
            
            />
            
            <Switch
                Grid.Column="1"
                IsToggled="False"
                OnColor="#5BAFEC"
                ThumbColor="{StaticResource Primary}"
                VerticalOptions="Center"
            />
        </Grid>


        <Button
            Grid.Row="3"
            Text="Disconnetti"
            Command="{Binding NavigateToLoginPageCommand}"
            HorizontalOptions="Center"
            VerticalOptions="End"
            HeightRequest="50"
            WidthRequest="200"
            Margin=" 30"
            BackgroundColor="{StaticResource Primary}"
            TextColor="{StaticResource Secondary}"
            FontSize="18"
            FontAttributes="Bold"
            />
    </Grid>
    
</ContentPage>