<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ProjApp.Pages"
    xmlns:local="clr-namespace:ProjApp"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Profile" Icon="profile.png">
            
            <ShellContent ContentTemplate= "{DataTemplate pages:Profile}" />
        </Tab>
        <Tab Title="Game" Icon="tanabar.png">
            <ShellContent ContentTemplate= "{DataTemplate pages:Game}" />
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent ContentTemplate= "{DataTemplate pages:Settings}" />
        </Tab>
    </TabBar>




    <!--<ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
