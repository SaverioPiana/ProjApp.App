<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjApp"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        
        <ShellContent
            Title="Start"
            ContentTemplate="{DataTemplate local:StartPage}"
            Route= "StartPage" 
            Icon="play_button_icon.svg"/>

        

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route= "ProfilePage"
            />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:Settings}"
            Route= "Settings"
            />

    </TabBar>
    
    <ShellContent
        Title=" MainPage!"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route= "MainPage" 
        />
</Shell>
